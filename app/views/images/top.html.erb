<div class="container-fluid">
  <div class="top-container">
    <% @images.each do |image| %>
      <div class="row">
        <div class="col-md-offset-4 col-md-4">
          <h2> Title: <%= image.title %></h2>
            <div class="fav-image-div">
              <%= image_tag(image.url, :class => "img-responsive") %>
              <!-- favorite button-->
              <%= link_to(favourite_favourites_path(id: image.id), remote: true, id: image.id, class: "btn btn-lg fav-image-button") do %>
                <span class="fav-image-icon glyphicon glyphicon-star-empty"></span>
              <% end %>
              <!-- fav end -->
            </div>
        </div>
      </div>
    <% end %>
  </div>
</div>